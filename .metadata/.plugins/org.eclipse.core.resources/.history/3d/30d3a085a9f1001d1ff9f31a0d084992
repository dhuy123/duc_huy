package bai3_2;

import java.util.Scanner;

public class tamGiac extends diem {
	private diem a,b,c;
	public tamGiac(int x, int y) {
		super(x,y);
		diem a,b,c;
		}
	public void nhapTG() {
		System.out.println("nhập điểm a:");
		a.nhapDiem();
		System.out.println("nhập điểm b:");
		b.nhapDiem();
		System.out.println("nhập điểm a:");
		c.nhapDiem();
	}
 public void xuatdiem() {
	 System.out.println("tọa độ điểm ");
	 System.out.println("a=("+x+","+y+")");
	 
 }
	public static void main(String[] args) {
		tamGiac a=new tamGiac(0,0);
		a.nhapTG();
		tamGiac b=new tamGiac(0,0);
		b.nhapTG();
		tamGiac c=new tamGiac(0,0);
		c.nhapTG();
		a.xuatdiem();
		b.xuatdiem();
		c.xuatdiem();
		
	}
	

}
